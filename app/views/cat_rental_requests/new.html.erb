<form action="/cat_rental_requests" method="post">

  <label for="cat">Which Cat?</label>
  <!-- dropdown -->
  <select name="cat_rental_request[cat_id]">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>


  <label for="cat_start_date">Start date</label>
  <!-- click on the date will launch a date picker -->
  <input name="cat_rental_request[start_date]" id="cat_start_date" type="date">

  <label for="cat_end_date">End date</label>
  <!-- click on the date will launch a date picker -->
  <input name="cat_rental_request[end_date]" id="cat_end_date" type="date">


  <input type="submit" value="Book cat!">


</form>
